{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run build process",
            "type": "shell",
            "command": "npm run start",
            "group": "none",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },

        {
            "label": "Run tests",
            "type": "shell",
            "command": [
                "npm test",
                "."
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },

        {
            "label": "Deploy to github pages",
            "type": "shell",
            "command": "npm run deploy -- -m \"${input:gh-pages-message}\"",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "gh-pages-message",
            "description": "Github Pages build Deploy message",
            "default": "Deploy",
            "type": "promptString"
        },
    ]
}